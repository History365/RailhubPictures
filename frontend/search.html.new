    <div class="content">
        <div class="main-content">
            <h1>Advanced Search</h1>
            
            <div id="searchQueryDisplay" class="search-query-display" style="display: none;">
                <p>You searched for: <strong id="queryText"></strong></p>
                <button onclick="clearSearch()" class="clear-search">Clear Search</button>
            </div>
            
            <div class="search-tabs">
                <div id="locomotiveSearchTab" class="search-tab active" onclick="switchSearchType('locomotive')">
                    Locomotive Search
                </div>
                <div id="photoSearchTab" class="search-tab" onclick="switchSearchType('photo')">
                    Photo Search
                </div>
            </div>

            <div id="searchResults">
                <!-- Search results will appear here -->
            </div>
        </div>

        <div class="sidebar">
            <div id="locomotiveSearchOptions" class="search-options">
                <div class="search-section">
                    <h3>Locomotive Search Options</h3>
                    <div class="form-group">
                        <label for="unitSearch">Unit Number:</label>
                        <input type="text" id="unitSearch" placeholder="e.g. 1234">
                    </div>
                    <div class="form-group">
                        <label for="railroad">Railroad:</label>
                        <select id="railroad">
                            <option value="">Any Railroad</option>
                            <option value="BNSF">BNSF</option>
                            <option value="UP">Union Pacific</option>
                            <option value="CSX">CSX</option>
                            <option value="NS">Norfolk Southern</option>
                            <option value="CP">Canadian Pacific</option>
                            <option value="CN">Canadian National</option>
                            <option value="KCS">Kansas City Southern</option>
                            <option value="Amtrak">Amtrak</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="model">Model:</label>
                        <input type="text" id="model" placeholder="e.g. SD70ACe">
                    </div>
                </div>
                
                <div class="search-section">
                    <h3>Status Filters</h3>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="activeOnly">
                            <label for="activeOnly">Active Only</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="deadlineOnly">
                            <label for="deadlineOnly">Deadline Only</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="scrappedOnly">
                            <label for="scrappedOnly">Scrapped Only</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="rebuiltOnly">
                            <label for="rebuiltOnly">Rebuilt Units</label>
                        </div>
                    </div>
                </div>
                
                <div class="search-section">
                    <h3>Photo Options</h3>
                    <div class="form-group">
                        <label for="includePhotos">Photo Availability:</label>
                        <select id="includePhotos">
                            <option value="all">All Units</option>
                            <option value="with">With Photos Only</option>
                            <option value="without">Without Photos Only</option>
                        </select>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button onclick="performSearch()" id="searchButton" class="primary">Search Locomotives</button>
                    <button onclick="resetFilters()" class="secondary">Reset Filters</button>
                </div>
            </div>

            <div id="photoSearchOptions" class="search-options" style="display: none;">
                <div class="search-section">
                    <h3>Photo Search Options</h3>
                    <div class="form-group">
                        <label for="photoUnitSearch">Unit Number:</label>
                        <input type="text" id="photoUnitSearch" placeholder="e.g. 1234">
                    </div>
                    <div class="form-group">
                        <label for="photoRailroad">Railroad:</label>
                        <select id="photoRailroad">
                            <option value="">Any Railroad</option>
                            <option value="BNSF">BNSF</option>
                            <option value="UP">Union Pacific</option>
                            <option value="CSX">CSX</option>
                            <option value="NS">Norfolk Southern</option>
                            <option value="CP">Canadian Pacific</option>
                            <option value="CN">Canadian National</option>
                            <option value="KCS">Kansas City Southern</option>
                            <option value="Amtrak">Amtrak</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="photographer">Photographer:</label>
                        <input type="text" id="photographer" placeholder="e.g. John Smith">
                    </div>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" id="location" placeholder="e.g. Chicago, IL">
                    </div>
                </div>
                
                <div class="search-section">
                    <h3>Photo Types</h3>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="rosterShots">
                            <label for="rosterShots">Roster Shots</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="actionShots">
                            <label for="actionShots">Action Shots</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="detailShots">
                            <label for="detailShots">Detail Shots</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="scenicShots">
                            <label for="scenicShots">Scenic Shots</label>
                        </div>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button onclick="performSearch()" id="photoSearchButton" class="primary">Search Photos</button>
                    <button onclick="resetFilters()" class="secondary">Reset Filters</button>
                </div>
            </div>
        </div>
    </div>

