            <div class="search-and-auth">
                <form id="headerSearchForm" class="header-search">
                    <input type="text" id="headerSearchInput" placeholder="Search...">
                    <button type="submit">
                        <img src="assets/images/search-icon.svg" alt="Search">
                    </button>
                </form>
                
                <!-- Auth buttons -->
                <div class="auth-buttons">
                    <div id="userButtonContainer"></div>
                    <div id="signedOutButtons">
                        <button onclick="signInWithClerk()" class="secondary auth-button">Sign In</button>
