<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= unit.road_name %> #<%= unit.road_number %> | Railhub Pictures</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/assets/stylesheet/theme.css" rel="stylesheet">
    <link href="/assets/stylesheet/styles.css" rel="stylesheet">
    <link href="/assets/stylesheet/homepage.css" rel="stylesheet">
    <link href="/assets/stylesheet/homepage2.css" rel="stylesheet">
    <link href="/assets/stylesheet/locomotive.css" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <script src="/assets/scripts/api-loader.js"></script>
    <script src="/assets/scripts/cloudflare/clerk-integration.js"></script>
    <script src="/assets/scripts/cloudflare/photo-display.js"></script>
    <script src="/assets/scripts/cloudflare/cloudflare-integration.js"></script>
    <script src="/assets/scripts/footer.js" defer></script>
    <script
      async
      crossorigin="anonymous"
      data-clerk-publishable-key="pk_test_Y29tbXVuYWwtY2F0LTI1LmNsZXJrLmFjY291bnRzLmRldiQ"
      src="https://communal-cat-25.clerk.accounts.dev/npm/@clerk/clerk-js@5/dist/clerk.browser.js"
      type="text/javascript">
    </script>
    <script src="/assets/scripts/clerk-auth.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/assets/images/logo.png" alt="RailHub Pictures" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/newestphotos.html">Newest</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/railroads">Railroads</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/search.html">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/upload.html">Upload</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-photos.html">My Photos</a>
                    </li>
                    <div id="user-button-container"></div>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5 pt-5">
        <div class="row my-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/railroads">Railroads</a></li>
                        <li class="breadcrumb-item"><a href="/railroad/<%= unit.road_name %>"><%= formatRailroadName(unit.road_name) %></a></li>
                        <li class="breadcrumb-item active"><%= unit.road_name %> #<%= unit.road_number %></li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-5">
                <% if (photos && photos.length > 0 && photos[0].image_url) { %>
                    <div class="main-photo-container">
                        <img src="<%= photos[0].image_url %>" class="img-fluid rounded" alt="<%= unit.road_name %> #<%= unit.road_number %>">
                    </div>
                <% } else { %>
                    <div class="placeholder-image bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                        <span class="text-muted">No image available</span>
                    </div>
                <% } %>
            </div>
            <div class="col-md-7">
                <h1 class="mb-3"><%= formatRailroadName(unit.road_name) %> #<%= unit.road_number %></h1>
                <div class="unit-details">
                    <div class="detail-item">
                        <span class="label">Railroad:</span>
                        <span class="value"><a href="/railroad/<%= unit.road_name %>"><%= formatRailroadName(unit.road_name) %></a></span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Model:</span>
                        <span class="value"><%= formatModelName(unit.model) || 'Unknown' %></span>
                    </div>
                    <% if (unit.builder) { %>
                    <div class="detail-item">
                        <span class="label">Builder:</span>
                        <span class="value"><%= unit.builder %></span>
                    </div>
                    <% } %>
                    <% if (unit.build_date) { %>
                    <div class="detail-item">
                        <span class="label">Built:</span>
                        <span class="value"><%= unit.build_date %></span>
                    </div>
                    <% } %>
                    <div class="detail-item">
                        <span class="label">Photos:</span>
                        <span class="value"><%= photos ? photos.length : 0 %> available</span>
                    </div>
                </div>
            </div>
        </div>

        <% if (photos && photos.length > 0) { %>
        <div class="row mb-4">
            <div class="col-12">
                <h2>Photos of <%= unit.road_name %> #<%= unit.road_number %></h2>
                <p class="text-muted">Browse all photos of this locomotive</p>
            </div>
        </div>

        <div class="row">
            <% photos.forEach(function(photo) { %>
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100">
                        <img src="<%= photo.image_url %>" class="card-img-top" alt="<%= photo.title || (unit.road_name + ' #' + unit.road_number) %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= photo.title || (unit.road_name + ' #' + unit.road_number) %></h5>
                            <% if (photo.location) { %>
                                <p class="card-text text-muted">Location: <%= photo.location %></p>
                            <% } %>
                            <% if (photo.capture_date) { %>
                                <p class="card-text"><small>Date: <%= new Date(photo.capture_date).toLocaleDateString() %></small></p>
                            <% } %>
                        </div>
                        <div class="card-footer">
                            <a href="/photo/<%= photo.photo_id %>" class="btn btn-primary btn-sm">View Photo</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    No photos available for this locomotive. <a href="/upload.html" class="alert-link">Be the first to upload one!</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>RailHub Pictures</h5>
                    <p>The premier platform for sharing and discovering locomotive photographs.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white">Home</a></li>
                        <li><a href="/newestphotos.html" class="text-white">Newest Photos</a></li>
                        <li><a href="/railroads" class="text-white">Railroads</a></li>
                        <li><a href="/search.html" class="text-white">Search</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Legal</h5>
                    <ul class="list-unstyled">
                        <li><a href="/termsOfService.html" class="text-white">Terms of Service</a></li>
                        <li><a href="/privacyPolicy.html" class="text-white">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="text-center mb-0">&copy; 2023 RailHub Pictures. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>