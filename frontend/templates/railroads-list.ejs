    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/assets/stylesheet/theme.css" rel="stylesheet">
    <link href="/assets/stylesheet/styles.css" rel="stylesheet">
    <link href="/assets/stylesheet/homepage.css" rel="stylesheet">
    <link href="/assets/stylesheet/homepage2.css" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/images/favicon.png">
    <script src="/assets/scripts/api-loader.js"></script>
    <script src="/assets/scripts/cloudflare/clerk-integration.js"></script>
    <script src="/assets/scripts/cloudflare/photo-display.js"></script>
    <script src="/assets/scripts/cloudflare/cloudflare-integration.js"></script>
    <script src="/assets/scripts/footer.js" defer></script>
    <script
      async
      crossorigin="anonymous"
      data-clerk-publishable-key="pk_test_Y29tbXVuYWwtY2F0LTI1LmNsZXJrLmFjY291bnRzLmRldiQ"
      src="https://communal-cat-25.clerk.accounts.dev/npm/@clerk/clerk-js@5/dist/clerk.browser.js"
      type="text/javascript">
    </script>
    <script src="/assets/scripts/clerk-auth.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/assets/images/logo.png" alt="RailHub Pictures" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/newestphotos.html">Newest</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/railroads">Railroads</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/search.html">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/upload.html">Upload</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-photos.html">My Photos</a>
                    </li>
                    <div id="user-button-container"></div>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero">
        <div class="hero-content">
            <h1>Browse Railroads</h1>
            <p>Discover locomotives and photos from railroads around the world</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="section">
        <div class="container">
            <div class="section-title">
                <h2>All Railroads</h2>
                <p>Click on a railroad to view their locomotives</p>
            </div>

            <div class="row">
                <% if (railroads && railroads.length > 0) { %>
                    <% railroads.forEach(function(railroad) { %>
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><%= railroad.name %></h5>
                                    <p class="card-text"><%= railroad.description || 'No description available' %></p>
                                    <% if (railroad.locomotive_count) { %>
                                        <p class="card-text"><small><%= railroad.locomotive_count %> locomotives</small></p>
                                    <% } %>
                                </div>
                                <div class="card-footer">
                                    <a href="/railroad/<%= railroad.id %>" class="btn btn-primary btn-sm">View Locomotives</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info">No railroads found.</div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>RailHub Pictures</h5>
                    <p>The premier platform for sharing and discovering locomotive photographs.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white">Home</a></li>
                        <li><a href="/newestphotos.html" class="text-white">Newest Photos</a></li>
                        <li><a href="/railroads" class="text-white">Railroads</a></li>
                        <li><a href="/search.html" class="text-white">Search</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Legal</h5>
                    <ul class="list-unstyled">
                        <li><a href="/termsOfService.html" class="text-white">Terms of Service</a></li>
                        <li><a href="/privacyPolicy.html" class="text-white">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="text-center mb-0">&copy; 2023 RailHub Pictures. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>